{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./lib",
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"]
        },
        "rootDir": "src",
        "plugins": [
            { "transform": "typescript-transform-paths" },
            { "transform": "typescript-transform-paths", "afterDeclarations": true }
        ]
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "./__tests__","node_modules", "lib", "types"]
}
